
<% flash.each do |type, msg| %>
    <% if type == "error" %>
        <div class="alert alert-danger"><%= msg %> </div>
    <% elsif type == "success" %>
        <div class= "alert alert-success"><%= msg %> </div>
    <% elsif type == "info" %>
        <div class= "alert alert-danger"><%= msg %> </div>
    <% end %>
<% end %>

<div class = "jumbotron mt-5 bg-dark" > 
<div class="card mt-5 card-flex" style = "background-color:navajowhite ;">
<% @projects.each do |project| %>  
  <div class="card" style="width: 19rem;">
  <div class="card-body mt-4">
    <h5 class="card-title"><p>Title: <%= project.title %> </p></h5>
    <h6 class="card-subtitle mb-2 text-muted"><p> Created on: <%= project.created_at %></p></h6>
    <p class="card-text"><%= project.body.length > 20 ? project.body[0..17] + '...' : project.body %></p>
    <div class="action">
        <a href="#" class="card-link"><%= link_to "show", users_path+ "/#{project.user_id}/projects/#{project.id}", :class => "btn btn-primary" %></a>
        <a href="#" class="card-link"><%= link_to "destroy", users_path+ "/#{project.user_id}/projects/#{project.id}", data: {confirm: "Are you sure bout that"}, method: "delete", :class => "btn btn-primary" %></a>
        <a href="#" class="card-link"><%= link_to "edit", users_path+ "/#{project.user_id}/projects/#{project.id}/edit", :class => "btn btn-primary" %></a>
    </div>
  </div>
</div>
 <% end %>

 </div>
</div>