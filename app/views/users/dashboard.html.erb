

<% flash.each do |type, msg| %>

<% if type == 'success' %>
<div class= "alert alert-success"><%= msg%> </div>
<% elsif type == 'alert' %>
<div class= "alert alert-danger"><%= msg%> </div>
<% end %>

<% end %>


<div class="container mt-5" >	
    <div class="col-md-9 pt-5 pb-5" style = "box-shadow: 5px 6px 11px 2px darkslategrey; border-radius: 10px">
            <h3 class = 'hello'> Hello <%= session[:fullname].capitalize() %> </h3>
            <%= link_to "My Profile", profile_users_path, :class => "list-group-item list-group-item-action" %>
        <div class="row row-span">
            <div class="col-sm-6 col-span">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Projects</h4>
                        <p class="card-text">Total Projects: <%= @projects.length %> </p>
                        <%= link_to "My Projects", "#{current_user.id}/projects", :class => "list-group-item list-group-item-action" %>
                        <%= link_to "New Project", "#{current_user.id}/projects/new", :class => "list-group-item list-group-item-action" %>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-span">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Shared Projects</h4>
                        <p class="card-text">Total Shared Projects: <%= @shared_projects.length %> </p>
                        <%= link_to " Go to Shared Projects", "/users/shared_projects", :class => "list-group-item list-group-item-action" %>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 mt-2 col-span">
                <div class="card padded">
                    <h5 class="card-title"> My total threads:  </h5>
                </div>
            </div>
            <div class="col-sm-6 mt-2 col-span">
                <div class="card padded">
                    <h5 class="card-title"> My total tasks: <%= @tasks.length %> </h5>
                </div>
            </div>
        </div>
    </div>
</div




