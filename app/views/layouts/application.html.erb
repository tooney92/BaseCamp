<!DOCTYPE html>
<html>
  <head>
    <title>Mybasecamp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" %> 
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow",style="background-color: cadetblue;">
      <a class="navbar-brand" href="/users">MyBaseCamp</a>
      <div class="right-part hide-on-desktop">
        <% if logged_in? and is_admin? %>
          <a class="shift-to-right" href="/users/dashboard">Dashboard</a>
          <a class="shift-to-right" href="/users/logout">Logout</a>
          <a class="shift-to-right" href="/users/allusers">All Users</a>
        <% elsif logged_in? %>
          <a class="shift-to-right" href="/users/dashboard">Dashboard</a>
          <a class="shift-to-right" href="/users/logout">Logout</a>
        <%else%>
          <a class="shift-to-right" href="/users/login">Login</a>
        <% end %>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <% if logged_in? and is_admin? %>
            <%= link_to "Home", users_path, :class => "nav-link"%>
            <%= link_to "DashBoard", dashboard_users_path, :class => "nav-link"%>
            <%= link_to "Logout", logout_users_path, :class => "nav-link"%>
            <%= link_to "allusers",  allusers_users_path, :class => "nav-link" %>

          <% elsif logged_in? %>
            <%= link_to "Home", users_path, :class => "nav-link"%>
            <%= link_to "DashBoard", dashboard_users_path, :class => "nav-link"%>
            <%= link_to "Logout", logout_users_path, :class => "nav-link"%>

          <%else%>
            <%= link_to "Home", users_path, :class => "nav-link"%>
            <%= link_to "Log in", login_users_path, :class => "nav-link"%>
          <% end %>

        </ul>
      </div>
    </nav>
    <%= yield %>
    <%= javascript_tag src="https://code.jquery.com/jquery-3.4.1.min.js" %>
    <%= javascript_tag src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" %>
  </body>
</html>

